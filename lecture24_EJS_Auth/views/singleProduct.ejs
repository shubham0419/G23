<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <style>
    body {
      background: #f4f6fb;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .product-container {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 24px rgba(0,0,0,0.10);
      padding: 2.5rem 2rem;
      min-width: 340px;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .product-container img {
      width: 140px;
      height: 140px;
      object-fit: cover;
      border-radius: 10px;
      background: #e9ecef;
      margin-bottom: 1.2rem;
    }
    .product-container h2 {
      margin: 0.3rem 0;
      font-size: 1.3rem;
      color: #007bff;
      font-weight: 600;
      text-align: center;
    }
    .product-container p {
      color: #444;
      font-size: 1rem;
      text-align: center;
      margin: 0.7rem 0 1.2rem 0;
    }
    .discount-form {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 0.7rem;
      width: 100%;
      justify-content: flex-start;
    }
    .discount-form label {
      font-size: 1rem;
      color: #333;
      cursor: pointer;
    }
    .discount-form input[type="checkbox"] {
      accent-color: #007bff;
      width: 18px;
      height: 18px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <div class="product-container">
    <img src="" alt="">
    <h2 id="price"><%= product.price %></h2>
    <h2><%= product.name %></h2>
    <p><%= product.description %></p>
    
    <div class="discount-form" id="gold-form">
      <input onclick='goldForm()' id="<%= product._id %>" type="checkbox" name="gold" >
      <label for="gold">Apply Gold Package</label>
    </div>
    <div class="discount-form" id="platinum-form">
      <input onclick='platinumForm(e)' id="<%= product._id %>" type="checkbox" name="platinum" >
      <label for="platinum">Apply Platinum Package</label>
    </div>
  </div>

  <script>
    const price = document.getElementById("price");
    const goldInput = document.getElementsByName("gold")[0];
    async function goldForm(){
      console.log("object");
      const isChecked = goldInput.value;
      const productId = goldInput.id;
      if(isChecked){
        let res = await axios.get(`http://localhost:4000/user/discount/gold/${productId}`,
          {withCredentials:true},
        )
        let discountPrice = res.data.discountedPrice;
        price.style.textDecoration = "line-through"
        price.style.color = "gray"
        price.append(discountPrice);
      }
    }
  </script>
</body>
</html>